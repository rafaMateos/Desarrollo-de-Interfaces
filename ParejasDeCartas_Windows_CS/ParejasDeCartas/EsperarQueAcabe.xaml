<Page
    x:Class="ParejasDeCartas.EsperarQueAcabe"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ParejasDeCartas"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <RelativePanel>

        <StackPanel RelativePanel.AlignHorizontalCenterWithPanel="True"
                    Orientation="Horizontal"
                    RelativePanel.AlignVerticalCenterWithPanel="True">

            <ProgressRing IsActive="True" Width="100" Height="100" ></ProgressRing>
            <TextBlock FontSize="50" HorizontalAlignment="Center" VerticalAlignment="Center" Text="Esperando al otro jugador"></TextBlock>
        </StackPanel>


        
    </RelativePanel>
</Page>
