<Page
    x:Class="_17_CrudPersonas_UWP_API.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:_17_CrudPersonas_UWP_API"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:vm="using:_17_CrudPersonas_UWP_API.ViewModel"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.DataContext>
        <vm:clsViewModel></vm:clsViewModel>
    </Page.DataContext>

    <ListView Name="lv_listado"
                  ItemsSource="{Binding ListadoDePersonas}">
        <ListView.ItemTemplate>
            <DataTemplate>
                <StackPanel Orientation="Vertical">
                    <TextBlock Text="{Binding Path=nombre}"                                    
                                   MaxWidth="120"
                                   MinWidth="120"
                                   FontSize="18"
                                   Margin="0,10,0,6"></TextBlock>
                    <TextBlock Text="{Binding Path=apellidos}"
                                   FontSize="14"
                                   Margin="0,0,0,10"></TextBlock>
                    
                </StackPanel>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>


</Page>
